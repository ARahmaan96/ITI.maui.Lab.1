<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Lab1.Pages.Page1"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Page1"
    BackgroundColor="#0066C8">
    <FlexLayout
        AlignItems="Stretch"
        Direction="Column"
        JustifyContent="Center">

        <Label
            Margin="0,0,0,10"
            FontAttributes="Bold"
            FontSize="35"
            HorizontalTextAlignment="Center"
            Text="Welcome To Xamarin"
            TextColor="#fff" />
        <Label
            Margin="0,0,0,10"
            FontSize="18"
            HorizontalTextAlignment="Center"
            Text="Cross-platform apps made easy"
            TextColor="#fff" />

        <Button
            Margin="0,0,0,10"
            BackgroundColor="#0095F6"
            CornerRadius="0"
            Text="Login" />
        <Button
            Margin="0,0,0,10"
            BackgroundColor="#0095F6"
            CornerRadius="0"
            Text="Register" />
    </FlexLayout>
</ContentPage>